<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="FontesEdtEmail">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/preto</item>
        <item name="android:textStyle">italic</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <style name="FontesTxt">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/preto</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">2dp</item>
    </style>

    <!--Style deslocamento-->
    <style name="EdtBrancoDeslocamento">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/preto</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/screen_border_botao_grande_branco</item>
    </style>

    <style name="BotaoDeslocamento">
        <item name="android:onClick">deslocamentoClick</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/preto</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/screen_border_botao_grande_amarelo</item>
    </style>

    <style name="TxtCinzaDeslocamento">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/preto</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/screen_border_cinza</item>
    </style>


    <style name="EdtKmDeslocamento">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:inputType">number</item>
        <item name="android:hint">Informe o KM</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/preto</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:maxLength">9</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:background">@drawable/screen_border_botao_grande_branco</item>
    </style>

    <!--Botão Branco-->

    <style name="BotaoGrandeBranco">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/preto</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/screen_border_botao_grande_branco</item>
    </style>

    <!--Botão Amarelo-->
    <style name="BotaoSimplesAmarelo">
        <item name="android:textSize">22sp</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/preto</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">365dp</item>
        <item name="android:layout_height">53dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:onClick">selecionarOpcao</item>
        <item name="android:background">@drawable/screen_border</item>
    </style>

    <style name="BotaoPonsseAmarelo">
        <item name="android:textSize">22sp</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/preto</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">628dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:onClick">selecionarOpcao</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/screen_border_botao_grande_amarelo</item>
    </style>

    <style name="FontesBotaoGrandeAmarelo">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/preto</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/screen_border_botao_grande_amarelo</item>
    </style>

    <!--Botão Verde-->

    <style name="BotaoSimplesVerde">
        <item name="android:textSize">22sp</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/preto</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">365dp</item>
        <item name="android:layout_height">53dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:onClick">selecionarOpcao</item>
        <item name="android:background">@drawable/screen_border_verde</item>
    </style>

    <!--Botão Vermelho-->

    <style name="BotaoVermelhoLogMax">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/branco</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:onClick">selecionarOpcao</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/screen_border_botao_grande_vermelho</item>
    </style>

    <!--Botões de Clique-->
    <style name="BotoesBranco">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/preto</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/screen_border_botao_grande_branco</item>
    </style>

    <style name="BotaoClick">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:onClick">selecionarOpcao</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!--Titulos-->
    <style name="TextosTitulos">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/preto</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">30dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/amarelo_padrao</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--Linear Layout-->
    <style name="LinearPadrão">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/amarelo_padrao</item>
        <item name="android:padding">16dp</item>
    </style>
    
    <style name="LinearBasico">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="EdtNumRelatorioOperacional">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">number</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:ems">2</item>
        <item name="android:maxLength">1</item>
    </style>

</resources>
