<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.timberforest.andreives.relatorios.detail.servicosLogmax.DetailControleInstalacaoCertificadoGarantiaLogmaxActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="1000dp">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:id="@+id/imageView21"
            android:src="@drawable/logo_log_max"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GARANTIKORT / CERTIFICADO DE GARANTIA"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="22dp"
            android:id="@+id/textView158"
            android:layout_below="@+id/imageView21"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Log Max"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="17dp"
            android:id="@+id/textView167"
            android:layout_below="@+id/textView158"
            android:layout_alignParentStart="true" />

        <Spinner
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinner"
            android:layout_alignTop="@+id/textView167"
            android:layout_toEndOf="@+id/textView167" />
    </RelativeLayout>
</ScrollView>
