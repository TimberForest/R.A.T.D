<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#000000">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="640dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout163">
        <TextView
            style="@style/BotaoPonsseAmarelo"
            android:text="Manutenção programada básica/completa da GRUA"
            android:id="@+id/manutencaoProgBasCompGruaButton" />

        <TextView
            style="@style/BotaoPonsseAmarelo"
            android:text="Manutenção programada básica/completa do HARVESTER"
            android:id="@+id/manutencaoProgBasCompCabecoteButton"/>
        <Button
            style="@style/BotaoPonsseAmarelo"
            android:text="Manutenção programada básica/completa do FORWARDER"
            android:id="@+id/manutencaoProgBasCompForwarderButton"/>
        <TextView
            style="@style/BotaoPonsseAmarelo"
            android:text="Manutenção programada básica/completa da MÁQUINA BASE"
            android:id="@+id/manutencaoProgBasCompMaquinaBaseButton"/>

        <TextView
            android:id="@+id/garantiaForwarderButton"
            style="@style/BotaoPonsseAmarelo"
            android:text="Garantia do FORWARDER" />

        <TextView
            style="@style/BotaoPonsseAmarelo"
            android:text="Garantia do HARVESTER"
            android:id="@+id/garantiaHarvesterButton"/>

        <ImageView
            android:layout_width="628dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="selecionarOpcao"
            android:id="@+id/imageView2"
            android:src="@drawable/ponsse_menucheck" />
    </LinearLayout>

    <ImageView
        android:layout_width="535dp"
        android:layout_height="320dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/imageView6"
        android:src="@drawable/scorpionmaquina"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="535dp"
        android:layout_height="320dp"
        android:id="@+id/imageView7"
        android:src="@drawable/forwarder_ponsse"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
