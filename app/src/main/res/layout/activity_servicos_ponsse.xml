<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#000000">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="630dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout163">
        <TextView
            android:layout_width="628dp"
            android:layout_height="50dp"
            android:clickable="true"
            android:textColor="#000000"
            android:text="Manutenção programada básica/completa da GRUA"
            android:onClick="selecionarOpcao"
            android:textSize="22sp"
            android:textStyle="bold"
            android:background="#DAA520"
            android:layout_margin="5dp"
            android:gravity="center"
            android:id="@+id/manutencaoProgBasCompGruaButton" />
        <TextView
            android:layout_width="628dp"
            android:layout_height="50dp"
            android:clickable="true"
            android:textColor="#000000"
            android:text="Manutenção programada básica/completa do HARVESTER"
            android:onClick="selecionarOpcao"
            android:textSize="22sp"
            android:textStyle="bold"
            android:background="#DAA520"
            android:gravity="center"
            android:layout_margin="5dp"
            android:id="@+id/manutencaoProgBasCompCabecoteButton"/>
        <Button
            android:layout_width="628dp"
            android:layout_height="50dp"
            android:clickable="true"
            android:textColor="#000000"
            android:text="Manutenção programada básica/completa do FORWARDER"
            android:onClick="selecionarOpcao"
            android:textSize="22sp"
            android:textStyle="bold"
            android:background="#DAA520"
            android:gravity="center"
            android:layout_margin="5dp"
            android:id="@+id/manutencaoProgBasCompForwarderButton"/>
        <TextView
            android:layout_width="628dp"
            android:layout_height="50dp"
            android:clickable="true"
            android:textColor="#000000"
            android:text="Manutenção programada básica/completa da MÁQUINA BASE"
            android:onClick="selecionarOpcao"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="#DAA520"
            android:layout_margin="5dp"
            android:id="@+id/manutencaoProgBasCompMaquinaBaseButton"/>
        <TextView
            android:layout_width="628dp"
            android:layout_height="50dp"
            android:clickable="true"
            android:textColor="#000000"
            android:gravity="center"
            android:text="Garantia do FORWARDER"
            android:onClick="selecionarOpcao"
            android:textSize="22sp"
            android:textStyle="bold"
            android:background="#DAA520"
            android:layout_margin="5dp"
            android:id="@+id/garantiaForwarderButton"/>
        <TextView
            android:layout_width="628dp"
            android:layout_height="50dp"
            android:clickable="true"
            android:textColor="#000000"
            android:gravity="center"
            android:text="Garantia do HARVESTER"
            android:onClick="selecionarOpcao"
            android:textSize="22sp"
            android:textStyle="bold"
            android:background="#DAA520"
            android:layout_margin="5dp"
            android:id="@+id/garantiaHarvesterButton"/>

        <ImageView
            android:layout_width="628dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="selecionarOpcao"
            android:id="@+id/imageView2"
            android:src="@drawable/ponsse_menucheck" />
    </LinearLayout>

    <ImageView
        android:layout_width="535dp"
        android:layout_height="320dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/imageView6"
        android:src="@drawable/scorpionmaquina"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="535dp"
        android:layout_height="320dp"
        android:id="@+id/imageView7"
        android:src="@drawable/forwarder_ponsse"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
