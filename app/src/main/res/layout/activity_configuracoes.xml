<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_shared_preferences_email"
    style="@style/LinearPadrão"
    tools:context=".sharedPreferences.SharedPreferencesEmailActivity">



    <TextView
        android:text="Configurações Gerais"
        android:id="@+id/txtTitulo"
        style="@style/TextosTitulos" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/screen_border_botao_grande_branco"
        android:padding="10dp"
        android:orientation="horizontal">

        <Button
            android:text="Configurações de E-mail"
            style="@style/BotaoSimplesAmarelo"
            android:id="@+id/btn_confi_email"
            android:layout_width="0dp"
            android:layout_weight="1"
            />

        <Button
            android:text="Atualizar App"
            style="@style/BotaoSimplesAmarelo"
            android:id="@+id/btn_atualizar"
            android:layout_width="0dp"
            android:layout_weight="1"
            />

    </LinearLayout>

</LinearLayout>
