            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:id="@+id/hjgkcjhggh"
            />

    </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="43dp"
            android:layout_marginRight="43dp"
            android:background="@drawable/logo_timber_forest">

        </LinearLayout>

        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">


            <TextView
                android:layout_width="365dp"
                android:layout_height="53dp"
                android:text="Relatários de assistência técnica"
                android:onClick="selecionarOpcao"
                android:clickable="true"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_margin="5dp"
                android:background="@drawable/screen_border"
                android:gravity="center"
                android:id="@+id/RelatoriosAssistenciaTecnicaButton"
                />

            <TextView
                android:layout_width="365dp"
                android:layout_height="53dp"
                android:text="Relatório de avaliação operacional"
                android:onClick="selecionarOpcao"
                android:clickable="true"
                android:textSize="22sp"
                android:textStyle="bold"
                android:background="@drawable/screen_border"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_margin="5dp"
                android:id="@+id/RelatoriosAvaliacaoOperacionalButton"
                />

            <TextView
            android:layout_width="365dp"
            android:layout_height="53dp"
            android:text="Perfil do mecânico"
            android:onClick="selecionarOpcao"
