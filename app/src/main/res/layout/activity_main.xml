            android:onClick="selecionarOpcao"
            android:id="@+id/btn_quadco" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="selecionarOpcao"
            android:background="@drawable/emp_palfinger"
            android:id="@+id/btn_palfinger" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="selecionarOpcao"
            android:background="@drawable/emp_ponsse"
            android:id="@+id/btn_ponsse" />

