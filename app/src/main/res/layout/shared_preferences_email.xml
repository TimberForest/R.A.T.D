<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_shared_preferences_email"
    style="@style/LinearPadrão"
    tools:context=".sharedPreferences.SharedPreferencesEmailActivity">

    <TextView
        android:text="Configurações - E-mail"
        android:id="@+id/txtTitulo"
        style="@style/TextosTitulos" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/screen_border_botao_grande_branco"
        android:padding="10dp"
        android:orientation="vertical">

        <TextView
            style="@style/FontesTxt"
            android:text="Emails para envio de Relatórios: Padrão"
            />

        <EditText
            android:id="@+id/edt_email"
            style="@style/FontesEdtEmail"
            android:layout_width="match_parent"
            android:hint="Insira os e-mails !">
            <requestFocus />
        </EditText>

        <TextView
            style="@style/FontesTxt"
            android:text="Emails para envio de Relatórios: Padrão + Rigesa:" />

        <EditText
            android:id="@+id/edt_email_rigesa"
            style="@style/FontesEdtEmail"
            android:layout_width="match_parent"
            android:hint="Insira os e-mails !"
            >
        </EditText>

        <Button
            android:text="Salvar Informações"
            style="@style/BotaoSimplesAmarelo"
            android:id="@+id/btn_salvar"
            android:onClick="SalvarConfig"
            />

    </LinearLayout>

</LinearLayout>
